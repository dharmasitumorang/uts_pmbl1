<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="Kode "
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/kodeBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:width="120dp" >
        <requestFocus />
    </EditText>
    <Button
        android:id="@+id/btnTampil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/kodeBarang"
        android:layout_alignBottom="@+id/kodeBarang"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/kodeBarang"
        android:text="Tampil" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/btnTampil"
        android:layout_marginTop="26dp"
        android:text="Nama Barang"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/namaBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/btnTampil"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/textView3"
        android:editable="false"
        android:ems="10"
        android:enabled="false" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/namaBarang"
        android:layout_marginTop="16dp"
        android:text="Harga Satuan"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/hargaBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/namaBarang"
        android:layout_alignRight="@+id/namaBarang"
        android:layout_alignTop="@+id/textView4"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="number" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/hargaBarang"
        android:layout_marginTop="27dp"
        android:text="Jumlah Beli"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/jmlBeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/hargaBarang"
        android:layout_alignRight="@+id/hargaBarang"
        android:ems="10"
        android:inputType="number" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/jmlBeli"
        android:layout_marginTop="19dp"
        android:text="Bonus"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/jmlBeli"
        android:layout_alignRight="@+id/jmlBeli"
        android:layout_alignTop="@+id/textView6"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="number" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/bonus"
        android:layout_marginTop="26dp"
        android:text="Total Bayar"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/totalBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignRight="@+id/bonus"
        android:layout_toRightOf="@+id/textView4"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="number" />
    <Button
        android:id="@+id/btnHitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_below="@+id/totalBayar"
        android:layout_marginTop="18dp"
        android:text="Hitung" />
    <Button
        android:id="@+id/btnUlang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnHitung"
        android:layout_alignBottom="@+id/btnHitung"
        android:layout_alignLeft="@+id/bonus"
        android:text="Ulang" />
    <Button
        android:id="@+id/btnKeluar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnUlang"
        android:layout_alignBottom="@+id/btnUlang"
        android:layout_alignRight="@+id/totalBayar"
        android:text="Keluar" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Data Harga Barang"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</RelativeLayout>